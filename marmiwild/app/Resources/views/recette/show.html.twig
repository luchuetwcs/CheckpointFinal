{% extends 'base.html.twig' %}

{% block body %}
    <h1>Recette</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ recette.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ recette.titre }}</td>
            </tr>
            <tr>
                <th>Nombrepersonne</th>
                <td>{{ recette.nombrePersonne }}</td>
            </tr>
            <tr>
                <th>Cout</th>
                <td>{{ recette.cout }}</td>
            </tr>
            <tr>
                <th>Temps</th>
                <td>{{ recette.temps }}</td>
            </tr>
            <tr>
                <th>Preparation</th>
                <td>{{ recette.preparation }}</td>
            </tr>
            <tr>
                <th>Quantite</th>
                <td>{{ recette.quantite }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('recette_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('recette_edit', { 'id': recette.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
