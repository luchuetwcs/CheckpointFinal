{% extends "@FOSUser/layout.html.twig" %}

{% block fos_user_content %}}<br><br>
    <h2 style="text-align: center;">Inscription :</h2><br><br>

<div class="box_login">
    <div>
        {{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register'}}) }}

        {{ form_label(form.email, 'E-mail') }}<br>
        {{ form_errors(form.email) }}
        {{ form_widget(form.email, {'attr': {'style': "width: 100%"}}) }}
        <br>
        {{ form_label(form.username, 'Pr√©nom') }}<br>
        {{ form_errors(form.username) }}
        {{ form_widget(form.username, {'attr': {'style': "width: 100%"}}) }}
        <br>
        {{ form_label(form.plainPassword.first, 'Mot de Passe') }}<br>
        {{ form_errors(form.plainPassword.first) }}
        {{ form_widget(form.plainPassword.first, {'attr': {'style': "width: 100%"}}) }}
        <br>
        {{ form_label(form.plainPassword.second, 'Confirmation du mot de passe') }}<br>
        {{ form_errors(form.plainPassword.second) }}
        {{ form_widget(form.plainPassword.second, {'attr': {'style': "width: 100%"}}) }}

        <div>
            <input type="submit" value="{{ 'registration.submit'|trans }}" />
        </div>
        {{ form_end(form) }}<br>

    </div>
    <br>
</div>

{% endblock fos_user_content %}
