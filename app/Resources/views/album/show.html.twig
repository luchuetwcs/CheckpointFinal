{% extends 'base.html.twig' %}

{% block body %}
    <h1>Album</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ album.id }}</td>
            </tr>
            <tr>
                <th>Namealbum</th>
                <td>{{ album.nameAlbum }}</td>
            </tr>
            <tr>
                <th>Releasedate</th>
                <td>{{ album.releaseDate }}</td>
            </tr>
            <tr>
                <th>Imageurl</th>
                <td>{{ album.imageUrl }}</td>
            </tr>
            <tr>
                <th>Descriptionalbum</th>
                <td>{{ album.descriptionAlbum }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('album_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('album_edit', { 'id': album.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
