{% extends 'base.html.twig' %}

{% block body %}
    <h1>Member</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ member.id }}</td>
            </tr>
            <tr>
                <th>Drummer</th>
                <td>{{ member.drummer }}</td>
            </tr>
            <tr>
                <th>Bassist</th>
                <td>{{ member.bassist }}</td>
            </tr>
            <tr>
                <th>Guitaristone</th>
                <td>{{ member.guitaristOne }}</td>
            </tr>
            <tr>
                <th>Guitaristtwo</th>
                <td>{{ member.guitaristTwo }}</td>
            </tr>
            <tr>
                <th>Singer</th>
                <td>{{ member.singer }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('members_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('members_edit', { 'id': member.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
