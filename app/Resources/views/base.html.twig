<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8" />
    <title>{% block title %}Welcome!{% endblock %}</title>
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    <link rel="stylesheet" href="{{ asset('build/main.css') }}">
    {% block stylesheets %}{% endblock %}
</head>
<body>

{% block header %}
    <!-- header fixe -->
    <header>
        <img src="img/logo" alt="logo du site">
    </header>
    <!-- menu déroulant -->
    <nav>
        <ul>
            <li class="menuItem">
                <h5>
                    <a href="{{ path('accueil') }}" title="Retourner à l'accueil">ACCUEIL</a>
                </h5>
            </li>
            <li class="menuItem">
                <h5>
                    <a href="" title="Retourner à l'accueil">RECETTES</a>
                </h5>
            </li>
        </ul>
    </nav>
{% endblock %}

{% block body %}{% endblock %}

{% block footer %}
    <!-- pied de page -->
    <footer>
        <p>MarmiWild</p>
    </footer>
{% endblock %}

<!-- Ces 2 fichiers JS doivent être chargés dans toutes les pages pr utiliser jQuery et jQuery-UI -->
<script src="{{ asset('build/manifest.js') }}"></script>
<script src="{{ asset('build/jquery_jqueryUi.js') }}"></script>

<script src="{{ asset('build/app.js') }}"></script>

{% block javascripts %}{% endblock %}
</body>
</html>