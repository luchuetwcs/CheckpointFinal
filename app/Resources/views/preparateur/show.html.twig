{% extends 'base.html.twig' %}

{% block body %}
    <h1>Preparateur</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ preparateur.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ preparateur.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ preparateur.prenom }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ preparateur.email }}</td>
            </tr>
            <tr>
                <th>Telephone</th>
                <td>{{ preparateur.telephone }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('preparateur_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('preparateur_edit', { 'id': preparateur.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
