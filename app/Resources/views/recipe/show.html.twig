{% extends 'base.html.twig' %}

{% block body %}
    <h1>Recipe</h1>
    {% for recipe in recipe %}
    <table class="table table-striped table-bordered">

        <tbody>

            <tr>
                <th>Id</th>
                <td>{{ recipe.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ recipe.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ recipe.description }}</td>
            </tr>
            <tr>
                <th>Timepreparation</th>
                <td>{% if recipe.timePreparation %}{{ recipe.timePreparation|date('H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Timecuisson</th>
                <td>{% if recipe.timeCuisson %}{{ recipe.timeCuisson|date('H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Action</th>
                <td>
                    <p><a href="{{ path('recipe_index') }}">Back to the list</a></p>

                </td>
            </tr>
        </tbody>
    </table>
    {% endfor %}


{% endblock %}
