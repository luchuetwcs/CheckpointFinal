{% extends 'base.html.twig' %}

{% block body %}
    <h1>Listeingredient</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ listeIngredient.id }}</td>
            </tr>
            <tr>
                <th>Quantite</th>
                <td>{{ listeIngredient.quantite }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('listeingredients_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('listeingredients_edit', { 'id': listeIngredient.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
