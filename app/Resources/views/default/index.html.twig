{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="{{ asset('build/accueil.css') }}">
{% endblock %}

{% block body %}

    <!-- Fonction de recherche d'une recette -->

    <div class="container search">
        <div class="row">
            <form method="post" action="/recipe/title" class="offset-4">
                <input type="search" name="search_recipe">
                <input type="submit" value="Search a recipe">
            </form>
        </div>


        <!-- Bloc générant des recettes aléatoires de la bdd -->

    <div class="container">

        <section class="random_recipes">
            <h1 class="text-center">Our best recipes</h1>
            <div class="row">
                <div class="offset-1 col-5">
                    <h4><a href="{{ path('recipe_show', { 'id': recipe1.id }) }}">{{ recipe1.title }}</a></h4>
                    <p>{{ recipe1.description }}</p>
                </div>
                <div class="offset-1 col-5">
                    <h4><a href="{{ path('recipe_show', { 'id': recipe2.id }) }}">{{ recipe2.title }}</a></h4>
                    <p>{{ recipe2.description }}</p>
                </div>
            </div>
            <div class="row separate">
                <div class="offset-1 col-5">
                    <h4><a href="{{ path('recipe_show', { 'id': recipe3.id }) }}">{{ recipe3.title }}</a></h4>
                    <p>{{ recipe3.description }}</p>
                </div>
                <div class="offset-1 col-5">
                    <h4><a href="{{ path('recipe_show', { 'id': recipe4.id }) }}">{{ recipe4.title }}</a></h4>
                    <p>{{ recipe4.description }}</p>
                </div>
            </div>
        </section>
    </div>


    </div>



{% endblock %}
